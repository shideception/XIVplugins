--Occult Relic Helper? I don't really know.
--It will spam duty roulettes, if no roulette is insta queued as first class assigned it'll try spam with the other ones.

ChangeJob = true
ChangeRoulette = true

local RouletteTable = {
    2,  --High-Level Dungeons
    6,  --Trials
    15, --Alliance Raids
    17  --Normal Raids

 }
local RouletteIndex = 1

local JobTable = { 
    "PCT",        --Change class name here
    "WAR",        --Change class name here
    "SGE"         --Change class name here
}
local JobIndex = 1

--==============================================================================--

while Instances.DutyFinder.QueueState ~= Instances.DutyFinder.QueueState.Ready do

    if ChangeJob == true then
        if RouletteIndex == 1 then
            yield("/equipjob " .. JobTable[JobIndex])
            JobIndex = JobIndex + 1
        end
    end

    Instances.DutyFinder:QueueRoulette( RouletteTable[RouletteIndex] )
    yield("/wait 1")
    Instances.DutyFinder:CancelQueue()
    yield("/wait 1")

    if ChangeRoulette == true then
        RouletteIndex = RouletteIndex + 1
        if RouletteIndex > #RouletteTable then
            RouletteIndex = 1
        end
    end

end

yield("/xltogglecollection Sujeira")

